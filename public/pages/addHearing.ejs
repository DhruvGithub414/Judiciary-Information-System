<!-- include header -->
<%- include('../include/header.ejs') %>
<!-- /include header -->

<link rel="stylesheet" href="./styles/form.css" />
<body class="hero-anime">
  <%- include('../include/navbar.ejs') %>
  <div class="container">
    <!-- form handling -->
    <br />
    <br />
    <br />
    <div class="form-title text-center">
      <div class="box-nav d-flex justify-between">
        <a href="/summary" class="border-shadow">
          <span class="text-gradient"
            ><i class="fas fa-angle-double-left"></i>View Summary</span
          >
        </a>
      </div>
      <h2 class="text-dark">New Hearing</h2>
    </div>
    <form action="/api/hearings" method="POST" id="add_user">
      <div class="form-group">
        <label for="CIN" class="text-dark">Case No</label>
        <input type="number" name="CIN" value="" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Case Name</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="cname" value="" placeholder="Enter Name" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark"> Time</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="time" value="" placeholder="Enter time" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Reason</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="reason"
          value=""
          placeholder="Enter reason"
        />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Presiding Judge</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="presidingJudge"
          value=""
          placeholder="Enter judge name"
        />
      </div>

      <div class="form-group">
        <label for="name" class="text-dark">Prosecutor</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="prosecutor"
          value=""
          placeholder="Enter prosecutor name"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </form>
  </div>
  <!-- include header -->
  <%- include('../include/footer.ejs') %>
  <!-- /include header -->
</body>
