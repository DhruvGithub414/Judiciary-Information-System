<!-- include header -->
<%- include('../include/header.ejs') %>
<!-- /include header -->

<link rel="stylesheet" href="./styles/form.css" />
<body class="hero-anime">
  <%- include('../include/navbar.ejs') %>
  <div class="container">
    <!-- form handling -->
    <br />
    <br />
    <br />
    <div class="form-title text-center">
      <div class="box-nav d-flex justify-between">
        <a href="/view" class="border-shadow">
          <span class="text-gradient"
            ><i class="fas fa-angle-double-left"></i>View Cases</span
          >
        </a>
      </div>
      <h2 class="text-dark">Add a Judge</h2>
    </div>
    <form action="/api/judges" method="POST" id="add_user">
      <div class="form-group">
        <label for="judge_no" class="text-dark">Judge No</label>
        <input type="number" name="jno" value="" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Judge Name</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="jname" value="" placeholder="Enter Name" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark"> Leave From</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="leaveFrom" value="" placeholder="Enter from timing" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Leave Till</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="leaveTill" value="" placeholder="Enter till timing" />
      </div>
      <div class="form-group">
        <label for="name" class="text-dark">Nature</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="nature"
          value=""
          placeholder="Enter nature"
        />
      </div>

      <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </form>
  </div>
  <!-- include header -->
  <%- include('../include/footer.ejs') %>
  <!-- /include header -->
</body>
